@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@model FastFoodSystem.WebApp.Models.Data.FFSProductCategory;

<div class="container">
    <h1> Edit Page</h1>
    <div class="card p-2">
        <form asp-action="Edit" class="content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Mã sản phẩm: </label>
                <input asp-for="FFSProductCategoryId" type="text" class="form-control" />
                <span asp-validation-for="FFSProductCategoryId" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label>Tên sản phẩm: </label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div> 

            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>