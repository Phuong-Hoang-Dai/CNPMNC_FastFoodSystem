@{
    ViewData["Title"] = "Quản lý danh mục sản phẩm";
    ViewData["Action"] = "Thêm danh mục sản phẩm";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@model FastFoodSystem.WebApp.Models.Data.FFSProductCategory;

<form asp-action="Create" class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Thêm mới loại sản phẩm</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>Mã loại sản phẩm: </label>
                        <input asp-for="FFSProductCategoryId" type="text" class="form-control" />
                        <span asp-validation-for="FFSProductCategoryId" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label>Tên loại sản phẩm: </label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Cập nhập" class="btn btn-success float-right">
        </div>
    </div>
</form>
