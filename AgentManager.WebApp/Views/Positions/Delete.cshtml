@model FastFoodSystem.WebApp.Models.Data.Position

@{
    ViewData["Title"] = "Quản lý chức vụ";
    ViewData["Action"] = "Xóa chức vụ";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Xóa chức vụ</h3>
                </div>
                <div class="card-body">
                    <div class="">
                        Xác nhận xóa chức vụ
                        <b>@Html.DisplayFor(model => model.PositionName)</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Quay lại</a>
                <input type="hidden" asp-for="PositionId" />
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
            </form>
        </div>
    </div>
</div>


