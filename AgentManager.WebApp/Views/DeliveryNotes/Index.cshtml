@model IEnumerable<AgentManager.WebApp.Models.Data.DeliveryNote>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    ViewData["Action"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Agent.AgentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Staff.StaffName)
                        </th>
                        @Html.Partial("Buttons/_AddButton")
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryNoteId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agent.AgentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.StaffName)
                        </td>

                        <td class="project-actions text-right">
                            @Html.Partial("Buttons/_DetailsButton", @item.DeliveryNoteId)
                            @Html.Partial("Buttons/_EditButton", @item.DeliveryNoteId)
                            @Html.Partial("Buttons/_DeleteButton", @item.DeliveryNoteId)
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</section>

