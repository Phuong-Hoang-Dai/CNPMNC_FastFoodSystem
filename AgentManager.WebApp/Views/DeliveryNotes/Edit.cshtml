

@model AgentManager.WebApp.Models.Data.DeliveryNote

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    ViewData["Action"] = "Sửa phiếu xuất hàng";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<form asp-action="Edit" class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Sửa thông tin phiếu xuất hàng</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DeliveryNoteId" />
                    <div class="form-group">
                        <label asp-for="Payment" class="control-label"></label>
                        <input asp-for="Payment" class="form-control" />
                        <span asp-validation-for="Payment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AgentId" class="control-label"></label>
                        <select asp-for="AgentId" class="form-control" asp-items="ViewBag.AgentId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="StaffId" class="control-label"></label>
                        <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Số lượng</th>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DeliveryNoteDetails)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Price</td>
                            <td class="project-actions text-right">
                                <a asp-action="Delete" asp-controller="DeliveryNoteDetails" asp-route-productId="@item.ProductId"
                                   asp-route-deliveryNoteId="@item.DeliveryNoteId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">

        <div class="col-6">
        </div>

        <div class="col-6">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Total:</th>
                            <td>@Model.TotalPrice</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <input type="submit" value="Lưu chỉnh sửa" class="btn btn-success float-right">
        </div>
    </div>
</form>

