@model AgentManager.WebApp.Models.Data.DeliveryNote

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    ViewData["Action"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<div class="invoice p-3 mb-3">

    <div class="row">
        <div class="col-12">
            <h4>
                <i class="fas fa-globe"></i> Phiếu xuất hàng: @Html.DisplayFor(model => model.DeliveryNoteId)
                <small class="float-right">@Html.DisplayNameFor(model => model.CreatedDate): @Html.DisplayFor(model => model.CreatedDate)</small>
            </h4>
        </div>

    </div>

    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            Khách hàng
            <address>
                <strong>@Html.DisplayNameFor(model => model.Agent.AgentName): @Html.DisplayFor(model => model.Agent.AgentName)</strong><br>
                @Html.DisplayNameFor(model => model.Agent.Address): @Html.DisplayFor(model => model.Agent.Address)<br>
                @Html.DisplayNameFor(model => model.Agent.Phone): @Html.DisplayFor(model => model.Agent.Phone)<br>
            </address>
        </div>
        <div class="col-sm-4 invoice-col">
            Nhân viên phụ trách
            <address>
                <strong>@Html.DisplayNameFor(model => model.Staff.StaffName): @Html.DisplayFor(model => model.Staff.StaffName)</strong><br>
                @Html.DisplayNameFor(model => model.Staff.Address): @Html.DisplayFor(model => model.Staff.Address)<br>
                @Html.DisplayNameFor(model => model.Staff.Email): @Html.DisplayFor(model => model.Staff.Email)<br>
            </address>
        </div>
        <div class="col-sm-4 invoice-col">
        </div>
    </div>


    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Số lượng</th>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.DeliveryNoteDetails)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="row">

        <div class="col-6">
        </div>

        <div class="col-6">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Total:</th>
                            <td>@Model.TotalPrice</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>


    <div class="row no-print">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-default">Quay lại</a>
            <a asp-action="Edit" asp-route-id=@Model.DeliveryNoteId class="btn btn-primary float-right" style="margin-right: 5px;">Chỉnh sửa</a>
        </div>
    </div>
</div>


