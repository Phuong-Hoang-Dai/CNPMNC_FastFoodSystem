@model AgentManager.WebApp.Models.Data.DeliveryNote
@{
    ViewData["Title"] = "Quản lý quyền";
    ViewData["Action"] = "Sửa quyền";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Xóa quyền</h3>
                </div>
                <div class="card-body">
                    <div class="">
                        Xác nhận xóa phiếu xuất hàng có mã 
                        <b>@Html.DisplayFor(model => model.DeliveryNoteId)</b>
                        của đại lý
                        <b>@Html.DisplayFor(model => model.Agent.AgentName)</b>
                        được tạo bởi nhân viên
                        <b>@Html.DisplayFor(model => model.Staff.StaffName)</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Quay lại</a>
                <input type="hidden" asp-for="DeliveryNoteId" />
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
            </form>
        </div>
    </div>
</div>

