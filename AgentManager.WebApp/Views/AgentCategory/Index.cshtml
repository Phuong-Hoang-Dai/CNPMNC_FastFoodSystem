@model IEnumerable<AgentManager.WebApp.Models.Data.AgentCategory>
@{
    ViewData["Title"] = "Quản lý loại đại lý";
    ViewData["Action"] = "Danh sách các loại đại lý";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaxDebt)
                            @Html.Partial("Buttons/_AddButton")
</tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AgentCategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxDebt)
                        </td>
                        <td class="project-actions text-right">
                            <a asp-action="Edit" asp-route-id="@item.AgentCategoryId" class="btn btn-info btn-sm">
                                <i class="fas fa-folder"></i>
                                Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AgentCategoryId" class="btn btn-danger btn-sm">
                                <i class="fas fa-folder"></i>
                                Xóa
                            </a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</section>