@model AgentManager.WebApp.Models.ViewModel.AddDeliveryNoteDetail

@{
    ViewData["Title"] = "Thêm chi tiết đơn hàng";
    ViewData["Action"] = "Thêm chi tiết đơn hàng";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<form asp-action="Create" class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Thêm chi tiết đơn hàng</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="DeliveryNoteId" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" asp-controller="DeliveryNotes" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Thêm sản phẩm" class="btn btn-success float-right">
            <a asp-action="Details" asp-route-id=@Model.DeliveryNoteId asp-controller="DeliveryNotes" class="btn btn-info float-right">Hoàn tất</a>
        </div>
    </div>
</form>



