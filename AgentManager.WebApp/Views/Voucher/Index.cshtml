@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@using FastFoodSystem.WebApp.Models.Data;
@model IEnumerable<FFSVoucher>

<section class="content">
    <div class="card my-2 p-1">
        <form asp-controller="Voucher" asp-action="Index" method="get">
            <div class="input-group">
                <input id="searchText" name="searchText" type="search" class="form-control form-control-lg" value="@ViewBag.SearchText" placeholder="Tìm kiếm">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            Mã khuyễn mãi
                        </th>
                        <th>
                            Giảm
                        </th>
                        <th>
                            Đơn vị
                        </th>
                        <th>
                            Giới hạn mức
                        </th>
                      
                        <th>
                            Ngày bắt đầu
                        </th>
                        <th>
                            Ngày kết thúc
                        </th>
                        @Html.Partial("Buttons/_AddButton")
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FFSVoucherId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Num)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td class="project-actions text-right">
                                @Html.Partial("Buttons/_DetailsButton", @item.FFSVoucherId)
                                @Html.Partial("Buttons/_EditButton", item.FFSVoucherId)
                                @Html.Partial("Buttons/_DeleteButton", item.FFSVoucherId)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>