@model FastFoodSystem.WebApp.Models.ViewModel.PositionVM

@{
    ViewData["Title"] = "Sửa thông tin chức vụ";
    ViewData["Action"] = "Quản lý chức vụ";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}

<form asp-action="Edit" class="content" asp-controller="Position">
    <div class="row">
        <div class="col">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Sửa thông tin chức vụ</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="maChucVu" />
                    <div class="form-group">
                        <label>Mã chức vụ: </label>
                        <input asp-for="maChucVu" type="text" class="form-control" readonly/>
                        <span asp-validation-for="maChucVu" class="text-danger small"></span>

                        <label>Tên chức vụ: </label>
                        <input asp-for="tenChucVu" class="form-control" />
                        <span asp-validation-for="tenChucVu" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Lưu chỉnh sửa" class="btn btn-success float-right">
        </div>
    </div>
</form>