@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@using FastFoodSystem.WebApp.Models.Data;
@model IEnumerable<FFSOrder>

<section class="content">
    <div class="card my-2 p-1">
        <form asp-controller="Order" asp-action="ListOrder" method="get">
            <div class="input-group">
                <input id="searchText" name="searchText" type="search" class="form-control form-control-lg" value="@ViewBag.SearchText" placeholder="Tìm kiếm">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            Order Id
                        </th>
                        <th>
                            Time
                        </th>
                        <th>
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(item => order.FFSOrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(item => order.Date)
                            </td>
                            <td>
                                @string.Format("{0:#,##0}", order.Cash) VND
                            </td>
                            <td class="project-actions text-right">
                                @Html.Partial("Buttons/_DetailsButton", @order.FFSOrderId)
                                @Html.Partial("Buttons/_EditButton", @order.FFSOrderId)
                                @Html.Partial("Buttons/_DeleteButton", @order.FFSOrderId)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
