@model IEnumerable<FastFoodSystem.WebApp.Models.Data.FFSIngredient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">
    <div class="card my-2 p-1">
        <form asp-controller="FFSIngredients" asp-action="Index" method="get">
            <div class="input-group">
                <input id="searchText" name="searchText" type="search" class="form-control form-control-lg" value="@ViewBag.SearchText" placeholder="Tìm kiếm">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FFSCatere.PhoneNumber)
                        </th>
                        @Html.Partial("Buttons/_AddButton")
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FFSCatere.PhoneNumber)
                            </td>
                            <td>
                                @Html.Partial("Buttons/_EditButton", @item.FFSIngredientId)
                                @Html.Partial("Buttons/_DeleteButton", @item.FFSIngredientId)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
