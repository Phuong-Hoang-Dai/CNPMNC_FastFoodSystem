@model FastFoodSystem.WebApp.Models.Data.FFSIngredient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<form asp-action="Edit">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Sửa thông tin nguyên liệu</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FFSIngredientId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FFSCatereId" class="control-label"></label>
                        <select asp-for="FFSCatereId" class="form-control" asp-items="ViewBag.FFSCatereId"></select>
                        <span asp-validation-for="FFSCatereId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <input type="submit" value="Lưu" class="btn btn-success float-right">
        </div>
    </div>
</form>

