@model AgentManager.WebApp.Models.Data.Department
@{
    ViewData["Title"] = "Quản lý phòng ban";
    ViewData["Action"] = "Xóa phòng ban";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Xóa phòng ban</h3>
                </div>
                <div class="card-body">
                    <div class="">
                        Xác nhận xóa phòng ban
                        <b>@Html.DisplayFor(model => model.DepartmentName)</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Quay lại</a>
                <input type="hidden" asp-for="DepartmentId" />
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
            </form>
        </div>
    </div>
</div>

