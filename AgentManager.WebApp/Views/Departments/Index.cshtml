@model IEnumerable<AgentManager.WebApp.Models.Data.Department>

@{
    ViewData["Title"] = "Quản lý phòng ban";
    ViewData["Action"] = "Danh sách phòng ban";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentName)
                        </th>
                        <th style="width: 20%">
                            <a asp-action="Create" class="btn btn-block btn-dark"> Thêm phòng ban</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>
                            <td class="project-actions text-right">
                                <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-info btn-sm">
                                    <i class="fas fa-folder"></i>
                                    Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-folder"></i>
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
