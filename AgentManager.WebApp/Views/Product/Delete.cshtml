@model AgentManager.WebApp.Models.ViewModel.SanPhamVM

<h1 class="text-uppdercase">delete product</h1>

<form method="post" asp-action="Delete" asp-controller="Product" enctype="multipart/form-data">
    <div class="form-group">
        <label>Mã sản phẩm: </label>
        <input asp-for="maSanPham" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Tên sản phẩm: </label>
        <input asp-for="tenSanPham" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-md-12">Ảnh: </label>
        <img src="/img/@Model.anh" class="img-fluid">
        <input asp-for="anh" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Khối lượng: </label>
        <input asp-for="khoiLuong" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Số lượng tồn kho: </label>
        <input asp-for="gia" class="form-control" readonly />
    </div>

     <div class="form-group">
        <label>Đơn vị tính: </label>
        <input asp-for="donViTinh" class="form-control" readonly />
    </div>

     <div class="form-group">
        <label>Giá: </label>
        <input asp-for="gia" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
